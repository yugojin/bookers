<% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>

<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "Show", book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>New book</h3>
<%= form_for @book, local: true do |f| %>
<% if @book.errors.any? %>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %>error</li>
    <% end %>
 </ul>
<% end %>
 <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Create Book' %>
<% end %>
