<h1>Editing Book</h1>
<%= form_with model: @book, local:true do |f| %>
<% if @book.errors.any? %>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
    <li><%= message %>error</li>
    <% end %>
 </ul>
<% end %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit 'Update Book' %>
<% end %>
<%= link_to "show", book_path(@book.id) %>
<%= link_to "back", books_path %>